@{
    ViewBag.Title = "Pacientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid p-4">

    <!-- Botones Imprimir y Excel -->
    <div class="d-flex justify-content-center gap-2 flex-wrap w-50 ms-auto">
        <button class="btn btn-dark d-flex align-items-center justify-content-center gap-2 px-3 flex-grow-1" style="min-width: 140px;">
            <i class="bi bi-printer"></i>
            <span class="d-none d-md-inline">IMPRIMIR</span>
        </button>
        <button class="btn btn-dark d-flex align-items-center justify-content-center gap-2 px-3 flex-grow-1" style="min-width: 140px;">
            <i class="bi bi-file-earmark-excel"></i>
            <span class="d-none d-md-inline">EXCEL</span>
        </button>
    </div>

    <!-- Formulario -->
    <form class="row g-3 mb-4">
        <div class="col-md-1">
            <label class="form-label">Código</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Cédula</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Sexo</label>
            <select class="form-select">
                <option>Femenino</option>
                <option>Masculino</option>
            </select>
        </div>
        <div class="col-md-3">
            <label class="form-label">Nombre</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Apellido</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-1">
            <label class="form-label">Edad</label>
            <input type="number" class="form-control" />
        </div>
        <div class="col-md-3">
            <label class="form-label">Ocupación</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Estado Civil</label>
            <select class="form-select">
                <option>Casado/a</option>
                <option>Soltero/a</option>
            </select>
        </div>
        <div class="col-md-4">
            <label class="form-label">Domicilio</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Teléfono</label>
            <input type="text" class="form-control" />
        </div>
        <div class="col-md-2">
            <label class="form-label">Estado</label>
            <select class="form-select">
                <option>Activo</option>
                <option>Pasivo</option>
            </select>
        </div>
    </form>

    <!-- Buscador + Contador -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div class="input-group" style="max-width: 300px;">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Buscar..." />
        </div>
        <div class="text-end">
            <span class="badge bg-warning text-dark p-2">
                <i class="bi bi-person-badge"></i> Médico: 3
            </span>
        </div>
    </div>

    <h5 class="mb-3">Lista de Pacientes</h5>

    <!-- Tabla -->
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Cédula</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Edad</th>
                    <th>Ocupación</th>
                    <th>Estado Civil</th>
                    <th>Teléfono</th>
                    <th>Estado</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>0992346509</td>
                    <td>Andreina Solangue</td>
                    <td>Lopez Perez</td>
                    <td>30</td>
                    <td>Ingeniero Sistema</td>
                    <td>Casada</td>
                    <td>0990400459</td>
                    <td>Activo</td>
                </tr>
                <tr>
                    <td>0505945349</td>
                    <td>Andrea Elizabeth</td>
                    <td>Villamar Torres</td>
                    <td>20</td>
                    <td>Ingeniero Sistema</td>
                    <td>Casada</td>
                    <td>0900987878</td>
                    <td>Activo</td>
                </tr>
            </tbody>
        </table>
    </div>

    <!-- Botones de Acción -->
    <section class="d-flex flex-wrap justify-content-center gap-3 mt-4 p-3 bg-white rounded">
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-plus-circle"></i>
            <span class="d-none d-md-inline">Nuevo</span>
        </button>
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-pen"></i>
            <span class="d-none d-md-inline">Editar</span>
        </button>
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-file-earmark-excel-fill"></i>
            <span class="d-none d-md-inline">Eliminar</span>
        </button>
        <button type="submit" class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-save"></i>
            <span class="d-none d-md-inline">Guardar</span>
        </button>
    </section>

</div>

