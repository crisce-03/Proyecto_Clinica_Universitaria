@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bg-white p-4 mt-5 rounded">

    <!-- BARRA DE BÚSQUEDA -->
    <div class="mb-4">
        <div class="input-group contenedorBusqueda">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" placeholder="Buscar medicamento..." />
        </div>
    </div>

    <!-- CONTENEDOR PRINCIPAL -->
    <div class="row g-4">

        <!-- TABLA DE MEDICAMENTOS -->
        <div class="col-12 col-lg-8">
            <div class="table-responsive table-container-scroll">
                <table class="table table-striped contenedorTabla">
                    <thead>
                        <tr>
                            <th scope="col">Imagen</th>
                            <th scope="col">ID</th>
                            <th scope="col">Medicamento</th>
                            <th scope="col">Descripción</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Vencimiento</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>Sin imagen</td>
                            <td>1</td>
                            <td>Lactulosa</td>
                            <td>Alivia el dolor de cabeza</td>
                            <td>1 / 20</td>
                            <td>24/04/2027</td>
                        </tr>
                        <tr>
                            <td>Sin imagen</td>
                            <td>2</td>
                            <td>Ibuprofeno</td>
                            <td>Ayuda a la desintoxicación</td>
                            <td>5 / 20</td>
                            <td>14/08/2030</td>
                        </tr>
                        <tr>
                            <td>Sin imagen</td>
                            <td>3</td>
                            <td>Metoclopramida</td>
                            <td>Ayuda al dolor de estómago</td>
                            <td>17 / 20</td>
                            <td>05/12/2032</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- REGISTRO DE MEDICAMENTOS-->
        <div class="col-12 col-lg-4">
            <h4>Registrar medicamento</h4>

            <form class="mt-3">
                <div class="mb-3">
                    <label for="medicamento" class="form-label">Medicamento:</label>
                    <input type="text" id="medicamento" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripción:</label>
                    <textarea id="descripcion" class="form-control" rows="2"></textarea>
                </div>

                <div class="mb-3">
                    <label for="cantidad" class="form-label">Cantidad:</label>
                    <input type="number" id="cantidad" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="vencimiento" class="form-label">Vencimiento:</label>
                    <input type="date" id="vencimiento" class="form-control" required />
                </div>

                <div class="mb-3">
                    <label for="imagen" class="form-label">Imagen:</label>
                    <input type="file" id="imagen" class="form-control" required />
                </div>
            </form>
        </div>



    </div>

    <section class="d-flex flex-wrap justify-content-center gap-3 mt-4 p-3 bg-white rounded">
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-plus-circle"></i>
            <span class="d-none d-md-inline">Nuevo</span>
        </button>
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-pen"></i>
            <span class="d-none d-md-inline">Editar</span>
        </button>
        <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-file-earmark-excel-fill"></i>
            <span class="d-none d-md-inline">Eliminar</span>
        </button>
        <button type="submit" class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
            <i class="bi bi-save"></i>
            <span class="d-none d-md-inline">Guardar</span>
        </button>
    </section>
</div>
