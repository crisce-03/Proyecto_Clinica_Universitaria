@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Proyecto_Clinica_Universitaria.Models.MedicosEspecialidadModel

<form asp-action="Guardar" asp-controller="MedicosEspecialidad" method="post">
    <section class="bg-white rounded min-vh-100 d-flex justify-content-center align-items-center w-100 p-4">
        <div class="container-fluid text-center">

            <!-- Primera fila: Buscador y opciones -->
            <div class="row g-3">
                <!-- Buscador y checkbox -->
                <div class="col-12 col-lg-9">
                    <div class="text-start">
                        <!-- Barra Búsqueda -->
                        <div class="p-3 bg-white border-bottom">
                            <div class="row justify-content-start">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Buscar paciente">
                                        <span class="input-group-text"><i class="bi bi-search"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- CheckBox Eliminar -->
                        <div class="form-check mt-3">
                            <input class="form-check-input" type="checkbox" id="eliminarCheck">
                            <label class="form-check-label" for="eliminarCheck">ELIMINAR</label>
                        </div>
                    </div>
                </div>

                <!-- Info lateral y botones -->
                <div class="col-12 col-lg-3">
                    <div class="shadow-lg p-3 mb-3  rounded">
                        <div class="text-end">1</div>
                        <hr class="my-2">
                        <div class="text-start">ESPECIALIDAD</div>
                    </div>


                    <!-- Botones laterales -->
                    <div class="d-flex justify-content-center gap-2 flex-wrap">
                        <button class="btn btn-dark d-flex align-items-center justify-content-center gap-2 px-3 flex-grow-1" style="min-width: 140px;">
                            <i class="bi bi-printer"></i>
                            <span class="d-none d-md-inline">IMPRIMIR</span>
                        </button>
                        <button class="btn btn-dark d-flex align-items-center justify-content-center gap-2 px-3 flex-grow-1" style="min-width: 140px;">
                            <i class="bi bi-file-earmark-excel"></i>
                            <span class="d-none d-md-inline">EXCEL</span>
                        </button>
                    </div>


                </div>
            </div>

            <!-- Segunda fila: tabla y formulario -->
            <div class="row mt-4 g-3">
                <!-- Tabla -->
                <div class="col-12 col-lg-9">
                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead class="table-light">
                                <tr>
                                    <th>ESPECIALIDAD</th>
                                    <th>DESCRIPCIÓN</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>Medicina General</td>
                                    <td>Medicina Moderna</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Formulario -->
                <div class="col-12 col-lg-3">
                    <div class="mb-3">
                        <label class="form-label">CÓDIGO</label>
                        <input type="text" asp-for="Codigo" readonly class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">OCUPACIÓN</label>
                        <input type="text" asp-for="Especialidad" class="form-control">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">DESCRIPCIÓN</label>
                        <textarea class="form-control" asp-for="Descripcion" rows="3"></textarea>>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <section class="d-flex flex-wrap justify-content-center gap-3 mt-4 p-3 bg-white rounded">
                <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
                    <i class="bi bi-plus-circle"></i>
                    <span class="d-none d-md-inline">Nuevo</span>
                </button>
                <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
                    <i class="bi bi-pen"></i>
                    <span class="d-none d-md-inline">Editar</span>
                </button>
                <button class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
                    <i class="bi bi-file-earmark-excel-fill"></i>
                    <span class="d-none d-md-inline">Eliminar</span>
                </button>
                <button type="submit" class="btn text-white px-3 py-2 d-flex align-items-center justify-content-center gap-2 flex-fill" style="background-color:#880C09;">
                    <i class="bi bi-save"></i>
                    <span class="d-none d-md-inline">Guardar</span>
                </button>
            </section>
        </div>
    </section>
</form>

